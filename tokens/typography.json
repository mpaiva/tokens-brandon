{
  "fontFamilies": {
    "heading": {
      "$type": "fontFamily",
      "$value": "Atkinson Hyperlegible Next",
      "$description": "Font family for headings and titles - optimized for readability"
    },
    "body": {
      "$type": "fontFamily",
      "$value": "Public Sans",
      "$description": "Primary font family for body text and general UI content"
    },
    "label": {
      "$type": "fontFamily",
      "$value": "Public Sans",
      "$description": "Font family for form labels and UI component labels"
    },
    "monospace": {
      "$type": "fontFamily",
      "$value": "Atkinson Hyperlegible Mono",
      "$description": "Monospaced font for code snippets and technical content"
    }
  },
  "fontWeights": {
    "regular": {
      "$type": "fontWeight",
      "$value": "400",
      "$description": "Default font weight for body text"
    },
    "medium": {
      "$type": "fontWeight",
      "$value": "500",
      "$description": "Medium font weight for emphasis and UI elements"
    },
    "bold": {
      "$type": "fontWeight",
      "$value": "700",
      "$description": "Bold font weight for headings and strong emphasis"
    }
  },
  "lineHeights": {
    "xs": {
      "$type": "number",
      "$value": "1.4"
    },
    "sm": {
      "$type": "number",
      "$value": "1.45"
    },
    "md": {
      "$type": "number",
      "$value": "1.55"
    },
    "lg": {
      "$type": "number",
      "$value": "1.6"
    },
    "xl": {
      "$type": "number",
      "$value": "1.65"
    }
  },
  "fontSize": {
    "xs": {
      "$type": "dimension",
      "$value": "0.75rem"
    },
    "sm": {
      "$type": "dimension",
      "$value": "0.875rem"
    },
    "md": {
      "$type": "dimension",
      "$value": "1rem"
    },
    "lg": {
      "$type": "dimension",
      "$value": "1.125rem"
    },
    "xl": {
      "$type": "dimension",
      "$value": "1.25rem"
    }
  },
  "headings": {
    "h1": {
      "fontSize": {
        "$type": "dimension",
        "$value": "2.125rem"
      },
      "lineHeight": {
        "$type": "number",
        "$value": "1.3"
      },
      "fontWeight": {
        "$type": "fontWeight",
        "$value": "{fontWeights.bold}"
      }
    },
    "h2": {
      "fontSize": {
        "$type": "dimension",
        "$value": "1.625rem"
      },
      "lineHeight": {
        "$type": "number",
        "$value": "1.35"
      },
      "fontWeight": {
        "$type": "fontWeight",
        "$value": "{fontWeights.bold}"
      }
    },
    "h3": {
      "fontSize": {
        "$type": "dimension",
        "$value": "1.375rem"
      },
      "lineHeight": {
        "$type": "number",
        "$value": "1.4"
      },
      "fontWeight": {
        "$type": "fontWeight",
        "$value": "{fontWeights.bold}"
      }
    },
    "h4": {
      "fontSize": {
        "$type": "dimension",
        "$value": "1.125rem"
      },
      "lineHeight": {
        "$type": "number",
        "$value": "1.45"
      },
      "fontWeight": {
        "$type": "fontWeight",
        "$value": "{fontWeights.bold}"
      }
    },
    "h5": {
      "fontSize": {
        "$type": "dimension",
        "$value": "1rem"
      },
      "lineHeight": {
        "$type": "number",
        "$value": "1.5"
      },
      "fontWeight": {
        "$type": "fontWeight",
        "$value": "{fontWeights.bold}"
      }
    },
    "h6": {
      "fontSize": {
        "$type": "dimension",
        "$value": "0.875rem"
      },
      "lineHeight": {
        "$type": "number",
        "$value": "1.5"
      },
      "fontWeight": {
        "$type": "fontWeight",
        "$value": "{fontWeights.bold}"
      }
    }
  }
}