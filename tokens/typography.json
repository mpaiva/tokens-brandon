{
  "fontFamily": {
    "heading": {
      "$type": "string",
      "$value": "Atkinson Hyperlegible Next",
      "$description": "Font family for headings and titles - Figma String variable"
    },
    "body": {
      "$type": "string",
      "$value": "Public Sans",
      "$description": "Primary font family for body text - Figma String variable"
    },
    "label": {
      "$type": "string",
      "$value": "Public Sans",
      "$description": "Font family for form labels - Figma String variable"
    },
    "monospace": {
      "$type": "string",
      "$value": "JetBrains Mono",
      "$description": "Monospaced font for code - Figma String variable"
    }
  },
  "fontWeight": {
    "regular": {
      "$type": "number",
      "$value": "400",
      "$description": "Default font weight for body text"
    },
    "medium": {
      "$type": "number",
      "$value": "500",
      "$description": "Medium font weight for emphasis and UI elements"
    },
    "bold": {
      "$type": "number",
      "$value": "700",
      "$description": "Bold font weight for headings and strong emphasis"
    }
  },
  "lineHeights": {
    "xs": {
      "$type": "lineHeight",
      "$value": "140%",
      "$description": "Extra small line height - 1.4x font size"
    },
    "sm": {
      "$type": "lineHeight",
      "$value": "145%",
      "$description": "Small line height - 1.45x font size"
    },
    "md": {
      "$type": "lineHeight",
      "$value": "155%",
      "$description": "Medium line height - 1.55x font size (default)"
    },
    "lg": {
      "$type": "lineHeight",
      "$value": "160%",
      "$description": "Large line height - 1.6x font size"
    },
    "xl": {
      "$type": "lineHeight",
      "$value": "165%",
      "$description": "Extra large line height - 1.65x font size"
    },
    "heading": {
      "tight": {
        "$type": "lineHeight",
        "$value": "130%",
        "$description": "Tight heading line height - 1.3x font size"
      },
      "normal": {
        "$type": "lineHeight",
        "$value": "135%",
        "$description": "Normal heading line height - 1.35x font size"
      },
      "relaxed": {
        "$type": "lineHeight",
        "$value": "140%",
        "$description": "Relaxed heading line height - 1.4x font size"
      }
    },
    "body": {
      "tight": {
        "$type": "lineHeight",
        "$value": "145%",
        "$description": "Tight body line height - 1.45x font size"
      },
      "normal": {
        "$type": "lineHeight",
        "$value": "150%",
        "$description": "Normal body line height - 1.5x font size"
      },
      "relaxed": {
        "$type": "lineHeight",
        "$value": "155%",
        "$description": "Relaxed body line height - 1.55x font size"
      }
    }
  },
  "letterSpacing": {
    "tight": {
      "$type": "dimension",
      "$value": "-0.05em",
      "$description": "Tight letter spacing for headings"
    },
    "normal": {
      "$type": "dimension",
      "$value": "0em",
      "$description": "Normal letter spacing"
    },
    "wide": {
      "$type": "dimension",
      "$value": "0.05em",
      "$description": "Wide letter spacing for emphasis"
    },
    "wider": {
      "$type": "dimension",
      "$value": "0.1em",
      "$description": "Extra wide letter spacing for uppercase text"
    }
  },
  "fontSize": {
    "xs": {
      "$type": "dimension",
      "$value": "0.75rem",
      "$description": "Extra small font size - 12px"
    },
    "sm": {
      "$type": "dimension",
      "$value": "0.875rem",
      "$description": "Small font size - 14px"
    },
    "md": {
      "$type": "dimension",
      "$value": "1rem",
      "$description": "Medium font size - 16px base"
    },
    "lg": {
      "$type": "dimension",
      "$value": "1.125rem",
      "$description": "Large font size - 18px"
    },
    "xl": {
      "$type": "dimension",
      "$value": "1.25rem",
      "$description": "Extra large font size - 20px"
    },
    "2xl": {
      "$type": "dimension",
      "$value": "1.375rem",
      "$description": "2X large font size - 22px (h3)"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "1.625rem",
      "$description": "3X large font size - 26px (h2)"
    },
    "4xl": {
      "$type": "dimension",
      "$value": "2.125rem",
      "$description": "4X large font size - 34px (h1)"
    }
  },
  "typography": {
    "h1": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{fontFamily.heading}",
        "fontWeight": "{fontWeight.bold}",
        "fontSize": "{fontSize.4xl}",
        "lineHeight": "{lineHeights.heading.tight}"
      },
      "$description": "Heading 1 - Page titles and main headings"
    },
    "h2": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{fontFamily.heading}",
        "fontWeight": "{fontWeight.bold}",
        "fontSize": "{fontSize.3xl}",
        "lineHeight": "{lineHeights.heading.normal}"
      },
      "$description": "Heading 2 - Section headings"
    },
    "h3": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{fontFamily.heading}",
        "fontWeight": "{fontWeight.bold}",
        "fontSize": "{fontSize.2xl}",
        "lineHeight": "{lineHeights.heading.relaxed}"
      },
      "$description": "Heading 3 - Subsection headings"
    },
    "h4": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{fontFamily.heading}",
        "fontWeight": "{fontWeight.bold}",
        "fontSize": "{fontSize.lg}",
        "lineHeight": "{lineHeights.body.tight}"
      },
      "$description": "Heading 4 - Small headings"
    },
    "h5": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{fontFamily.heading}",
        "fontWeight": "{fontWeight.bold}",
        "fontSize": "{fontSize.md}",
        "lineHeight": "{lineHeights.body.normal}"
      },
      "$description": "Heading 5 - Minor headings"
    },
    "h6": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{fontFamily.heading}",
        "fontWeight": "{fontWeight.bold}",
        "fontSize": "{fontSize.sm}",
        "lineHeight": "{lineHeights.body.normal}"
      },
      "$description": "Heading 6 - Smallest headings"
    },
    "body": {
      "default": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.body}",
          "fontWeight": "{fontWeight.regular}",
          "fontSize": "{fontSize.md}",
          "lineHeight": "{lineHeights.body.relaxed}"
        },
        "$description": "Default body text"
      },
      "small": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.body}",
          "fontWeight": "{fontWeight.regular}",
          "fontSize": "{fontSize.sm}",
          "lineHeight": "{lineHeights.body.tight}"
        },
        "$description": "Small body text"
      },
      "large": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.body}",
          "fontWeight": "{fontWeight.regular}",
          "fontSize": "{fontSize.lg}",
          "lineHeight": "{lineHeights.lg}"
        },
        "$description": "Large body text"
      }
    },
    "label": {
      "default": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.body}",
          "fontWeight": "{fontWeight.medium}",
          "fontSize": "{fontSize.sm}",
          "lineHeight": "{lineHeights.body.tight}"
        },
        "$description": "Form labels and UI labels"
      },
      "small": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.body}",
          "fontWeight": "{fontWeight.medium}",
          "fontSize": "{fontSize.xs}",
          "lineHeight": "{lineHeights.heading.relaxed}"
        },
        "$description": "Small labels"
      }
    },
    "code": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{fontFamily.monospace}",
        "fontWeight": "{fontWeight.regular}",
        "fontSize": "{fontSize.sm}",
        "lineHeight": "{lineHeights.body.normal}"
      },
      "$description": "Code and monospace text"
    }
  }
}